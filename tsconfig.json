{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es5", "dom"],
    "module": "esNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "outDir": "./dist"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/*.stories.*", "**/*.test.*", "**/*.spec.*"]
}
